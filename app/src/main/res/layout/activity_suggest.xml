<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SuggestActivity"
    android:id="@+id/W">
    <fragment
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/navigateText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/orderpizza"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callButton"
        android:src="@drawable/callme"
        android:adjustViewBounds="false"
        android:background="#00ffffff"
        android:contentDescription=""
        android:layout_marginRight="20dp"
        android:layout_marginEnd="33dp"
        android:layout_alignBottom="@+id/profileIcon"
        android:layout_toLeftOf="@+id/smsButton"
        android:layout_toStartOf="@+id/smsButton"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smsButton"
        android:src="@drawable/textme"
        android:background="#00ffffff"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="25dp"
        android:layout_alignTop="@+id/emailButton"
        android:layout_toLeftOf="@+id/emailButton"
        android:layout_toStartOf="@+id/emailButton"
        android:clickable="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailButton"
        android:src="@drawable/emailme"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/callButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Navigate to..."
        android:id="@+id/navigateText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/contactText"
        android:text="Contact"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/profileIcon"
        android:layout_alignStart="@+id/profileIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Order..."
        android:id="@+id/orderText"
        android:layout_above="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/profileIcon"
        android:src="@drawable/profileicon"
        android:layout_below="@+id/contactText"
        android:layout_alignRight="@+id/navigateText"
        android:layout_alignEnd="@+id/navigateText"
        android:layout_marginTop="15dp" />
</RelativeLayout>
